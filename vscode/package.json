{
  "name": "vscode-hyprls",
  "description": "VSCode extension for HyprLS",
  "author": "Gwenn Le Bihan <gwenn.lebihan7@gmail.com>",
  "license": "MIT",
  "version": "0.7.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyprland-community/hyprls"
  },
  "publisher": "ewen-lbh",
  "categories": [],
  "keywords": [],
  "engines": {
    "vscode": "^1.999.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "hyprlang",
        "aliases": [
          "HyprLang"
        ],
        "extensions": [
          ".hl"
        ],
        "filenamePatterns": [
          "hypr*.conf"
        ]
      }
    ],
    "commands": [
      {
        "category": "HyprLS",
        "title": "Restart language server",
        "command": "vscode-hyprls.restart-lsp"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "HyprLS",
      "properties": {
        "hyprls.ignore": {
          "type": [
            "array"
          ],
          "items": {
            "type": "string"
          },
          "description": "List of files or patterns to ignore",
          "default": [
            "hyprlock.conf",
            "hypridle.conf"
          ]
        },
        "hyprls.preferIgnoreFile": {
          "type": "boolean",
          "description": "Whether to prefer .hyprignore file over 'hyprls.ignore' setting",
          "default": true
        }
      }
    }
  },
  "activationEvents": [
    "onLanguage:hyprlang"
  ],
  "main": "./out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./src --ext .ts,.tsx",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@ortfo/db": "^1.6.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.107.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.2",
    "mocha": "^11.7.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "icon": "icon.png",
  "displayName": "HyprLS"
}
